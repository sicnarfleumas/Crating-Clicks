---
import HeaderLink from './HeaderLink.astro';

---

<header>
	<nav>
		<h2 class="logo"><a href="/">Crafting Clicks</a></h2>
		<div class="internal-links">
			<HeaderLink href="#About">About</HeaderLink>
			<HeaderLink href="#Services">Services</HeaderLink>
			<HeaderLink href="#Contact" class="contact-link">Contact</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1em 10%;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		color: var(--accent);
		font-size: 3.2em;

	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		font-family: 'Playfair Display Variable', sans-serif;

	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 2rem;
	}
	.internal-links .contact-link {
    	color: white;
		background: var(--accent);
		border-radius: 5px;
		padding: .15rem .75rem;
	}
	
	@media (max-width: 720px) {
		
	}
</style>

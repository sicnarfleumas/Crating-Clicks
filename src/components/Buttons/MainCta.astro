---
const text = Astro.props.text;
const link = Astro.props.text;
---
<a href={link}>{text}</a>

<style>
    a {
        font-weight: 600;
        display: inline-block;
        text-decoration: none;
        background-color: var(--accent);

        height: fit-content;
        width: fit-content;
        
        padding: .5rem;
        border-radius: .5rem;
        color: var(--white);
    }

</style>